# Just load all paired keys
if [ -d $HOME/.ssh ]; then
    for f in `ls -1 $HOME/.ssh`; do
        if [[ -f $f\.pub ]]; then
            eval $(keychain -q --agents ssh --eval $f)
        fi;
    done
fi

