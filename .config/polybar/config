[colors]
;background = ${xrdb:color0:#222}
background = #2E3440
background-alt = #2E3440
;foreground = ${xrdb:color7:#222}
foreground = #e5e9f0
foreground-alt = #4c566a
primary = #ffb52a
secondary = #e60053
alert = #bd2c40
bar_bg = #5e81ac

[bar/main]
monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 2.2%
;offset-x = 1%
;offset-y = 1%
; radius = 2.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

